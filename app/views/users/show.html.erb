<div class="flash-message-container">
  <%= flash_messages %>
</div>

<div class="col-md-4" style='background:lightblue'>
  <%= image_tag("#{@user.image}", width: "200px", alt: "Profile Picture") %>
  <h3><%= @user.first_name.titleize %> <%= @user.last_name.titleize %></h3>
  <% if current_user != nil && current_user.id == @user.id && current_user.role == true %>
    <li>I am an instructor</li>
  <% elsif current_user != nil && current_user.id == @user.id && current_user.role == false %>
    <%= @user.email %>
  <% elsif current_user != nil && current_user.id != @user.id && current_user.role == false && @user.role == true %>
    <%= button_to "Follow", current_user.friend_request(@user), :class=>"ruby-link btn btn-info btn-default btn-md" %>
    <%= button_to "Pending Request", current_user.friend_request(@user), disabled: true, :class=>"ruby-link btn btn-info btn-default btn-md" %>
  <% else %>
    <li>hi</li>
  <% end %>
</div>

<div class="col-md-7" style='background:red'>
  <% if current_user != nil && current_user.id == @user.id && current_user.role == true %>
    <h4>Form to tweet</h4>
    <%= bootstrap_form_for(@user) do |f| %>
      <%= f.text_area :email, placeholder: 'test' %>
    <% end %>
    <h4>Students</h4>
    <% @user.friends.each do |f| %>
      <%= f.first_name.titleize %> <%= f.last_name.titleize %>
    <% end %>
  <% elsif current_user != nil && current_user.id == @user.id && current_user.role == false %>
    <ul>
      <li>I am a student</li>
      <li>Placeholder for instructor tweets</li>
      <h4>Instructors</h4>
      <% @user.friends.each do |f| %>
        <%= f.first_name.titleize %> <%= f.last_name.titleize %>
      <% end %>
    </ul>
  <% else %>
    <ul>
      <li>Sign up</li>
    </ul>
  <% end %>
</div>

<div class="col-md-1" style='background:green'>
  <div class="container">
    <h1>test</h1>
  </div>
</div>
