<div class="col-md-4 col-md-offset-4">
  <div class="EditProfile">
    <%= bootstrap_form_for(@user) do |f| %>
      <%= f.text_field :first_name, placeholder: 'First Name' %>
      <%= f.text_field :last_name, placeholder: 'Last Name' %>
      <%= f.email_field :email, placeholder: 'Email' %>
      <%= f.password_field :password, placeholder: 'Password' %>
      <%= f.text_field :image, placeholder: 'Image URL' %>
      <%= f.form_group :role, label: { text: "Role" } do %>
        <%= f.radio_button :role, 'false'  %>
        <%= f.label 'Student', inline: true, checked: true  %>
        <%= f.radio_button :role, 'true'  %>
        <%= f.label 'Instructor', inline: true  %>
      <% end %>
      <input type="radio" name='thing' value='valuable' data-id="female" />Female
      <input type="radio" name='thing' value='valuable' data-id="male" />Male
      <hr />
      <div id="female" class="none">Div for Male</div>
      <div id="male" class="none">Div for Female</div>

      <div class="btn-group none" role="group" id="instructor">
        <p>Course</p>
        <button type="button" class="btn btn-secondary">WDI</button>
        <button type="button" class="btn btn-secondary">UXDI</button>
        <button type="button" class="btn btn-secondary">DSI</button>
      </div>
      <%= f.text_field :course, placeholder: 'Course' %>


    <br>
    <div class="FormButtons">
      <%= f.submit @user.new_record? ? "Create Account" : "Update Profile"  %>
      <%= button_to "Cancel", :back, method: :get, :class=>"ruby-link btn btn-info btn-default btn-md" %>
    </div>
    <% end %>
    <br>
  </div>
</div>
